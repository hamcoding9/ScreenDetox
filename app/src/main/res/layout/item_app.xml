<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="10dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:id="@+id/linearLayout2">

    <ImageView
        android:id="@+id/icon_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/app_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="App"
        android:textSize="15dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/icon_img"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="270dp"
        android:layout_height="10dp"
        android:progressBackgroundTint="#b9b9ba"
        android:progressTint="@color/primaryBlue"
        android:layout_marginLeft="3dp"
        app:layout_constraintTop_toBottomOf="@id/app_name_tv"
        app:layout_constraintLeft_toRightOf="@id/icon_img"/>

    <TextView
        android:id="@+id/usage_duration_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="0h"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toRightOf= "parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
